<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render partial: "shared/html_header" %>
  </head>
  <body>
    <%= render partial: "shared/topbar" %>

    <div class="container">
      <div class="content">
        <div class="row">
          <div class="span3">
            <div class="well sidebar-nav">
              <%= render partial: (@sidebar || "sidebar") %>
            </div>
          </div>
          <div class="span9">
            <%= render partial: "shared/flash_list" %>
            <%= yield %>
          </div>
          <div class="span1">&nbsp;</div>
        </div>
      </div>

      <%= render partial: "shared/footer" %>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
