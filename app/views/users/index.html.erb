<table class="zebra-striped">
 <thead>
  <tr>
    <th>No</th>
    <th><%= t("activerecord.attributes.user.login", :default => t("activerecord.labels.login", :default => "Login")) %></th>
    <th><%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %></th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, idx| -%>
   <tr>
     <td><%= idx + 1 %></td>
     <td><%= link_to user.login, user_path(user) %></td>
     <td><%= user.email %></td>
     <td><%= time_format(user.created_at) %></td>
     <td><%= time_format(user.updated_at) %></td>
    <td>
      <%= link_to "Show", user_path(user), class: "btn primary" %>
      <%= link_to "Edit", edit_user_path(user), class: "btn" %>
      <%= link_to "Destroy", user_path(user),
                  class: "btn",
                  method: :delete,
                  confirm: "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_user_path, :class => 'btn primary' %>
